{{page-title "Page"}}
<main class="articles-page">
    <h2 class="text-center">Blog Page N<sup>o</sup> {{@model.currentPage}}</h2>
    <div class="d-flex justify-content-between">
        {{#each @model.articlesPage as |item|}}
            <article itemid='post-{{item.id}}' itemscope itemtype="http://schema.org/Article" class="post card">
                <div class="card-body">
                    <h5 itemprop="name" class="card-title">
                        <LinkTo @route="articles.single" @model={{item.id}}>{{item.title}}</LinkTo>
                    </h5>
                    <h6 itemprop="author" itemscope itemtype="http://schema.org/Person" class="card-subtitle" itemid={{item.author.id}}>
                        By: 
                        <LinkTo @route="articles.author" @model={{item.author.id}}>{{item.author.username}}</LinkTo>&nbsp;
                        <small style="font-weight: normal">({{item.author.name}})</small>            
                    </h6>
                    <p class="card-text crop">{{item.content}}</p>
                </div>
            </article>
        {{/each}}
    </div>

    <nav class="d-flex pagination" style="display:flex;justify-content:space-between">
        {{#if (lte 1 @model.prevPage)}}
            <LinkTo @model={{@model.firstPage}} @route="articles.page">First Page</LinkTo>
            <LinkTo @model={{@model.prevPage}} @route="articles.page">Previous Page</LinkTo>
        {{/if}}
        {{#if (gte  @model.lastPosts @model.nextPage)}}
            <LinkTo @model={{@model.nextPage}} @route="articles.page">Next Page</LinkTo>
            <LinkTo @model={{@model.lastPage}} @route="articles.page">Last Page</LinkTo>
        {{/if}} 
    </nav>

</main>
