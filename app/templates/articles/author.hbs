{{page-title "Author"}}

<main class="articles-authors">
    {{#each @model as |item|}}
        <article itemid='author-article-{{item.id}}' itemscope itemtype="http://schema.org/Article" class="single-author-post">
                <h2 itemprop="author" itemscope itemtype="http://schema.org/Person">
                Author: {{item.author.username}} 
                <small style="font-weight: normal">
                    ({{item.author.name}})
                </small>
            </h2>
            
            <blockquote>
                <h3 itemprop="name">{{item.title}}</h3>
                <p itemprop="text">{{item.content}}</p>
            </blockquote>
        </article>
    {{/each}}

    </main>
{{outlet}}